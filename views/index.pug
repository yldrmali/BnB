extends layout_materialize

block content
  .container-fluid
    .row
      each results in all_results
        .col.s12.m6.l4
          .card.hoverable
            .card-image.waves-effect.waves-block.waves-light
              img.activator(src=`${results.picture_url}` style="height:300px;object-fit:cover")
            .card-content
              span.card-title.activator.grey-text.text-darken-4
                | #{results.home_name}
                i.material-icons.right more_vert
                blockquote(style="border-color:#9c27b0") #{results.price} $
            .card-reveal
              span.card-title.grey-text.text-darken-4
                | Summary
                i.material-icons.right close
              p #{results.summary}
            .card-action
              p #{results.address} 


